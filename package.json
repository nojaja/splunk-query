{
  "name": "splunk-query-cli",
  "version": "0.1.0",
  "main": "dist/index.js",
  "bin": "dist/index.js",
  "scripts": {
    "lint": "eslint . --ext .ts && npx depcruise src --output-type dot > ./docs/dependency-cruiser.dot",
    "lint:fix": "eslint . --ext .ts --fix",
    "test": "jest --config=jest.config.js --coverage && npm run lint",
    "build": "npm run test && tsc -p tsconfig.json && npm run docs",
    "pkg:win": "npm run build && npx pkg -t node16-win-x64 --out-path release .",
    "pkg:mac": "npm run build && npx pkg -t node16-macos-x64 --out-path release .",
    "pkg:linux": "npm run build && npx pkg -t node16-linux-x64 --out-path release .",
    "pkg:all": "npm run build && npx pkg -t node16-win-x64,node16-macos-x64,node16-linux-x64 --out-path release .",
    "docs": "typedoc --options typedoc.json",
    "e2e:up": "docker-compose -f test/e2e/docker-compose.yml up -d",
    "e2e:down": "docker-compose -f test/e2e/docker-compose.yml down",
    "e2e": "jest --config=jest.e2e.config.js --coverage"
  },
  "dependencies": {
    "commander": "^10.0.0",
    "log4js": "^6.9.1",
    "splunk-sdk": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "pkg": "^5.8.0",
    "dependency-cruiser": "^16.10.4",
    "eslint": "^9.37.0",
    "eslint-plugin-jsdoc": "^50.8.0",
    "eslint-plugin-sonarjs": "^3.0.5",
    "jest": "^29.6.1",
    "ts-jest": "^29.1.0",
    "typedoc": "^0.28.14",
    "typedoc-plugin-markdown": "^4.3.0",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.46.0"
  }
}
